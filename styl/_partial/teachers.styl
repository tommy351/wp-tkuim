.teachers__list
  display: flex
  flex-flow: row wrap
  align-content: space-around

.teachers__entry
  display: block
  text-decoration: none
  color: inherit
  width: 300px
  max-width: 100%
  padding: 20px
  margin: auto
  &:hover
    color: color-accent
    .teachers__entry-thumb-wrap
      border-color: color-accent

.teachers__entry-title
  font-size: 1.5em
  font-weight: 300
  text-align: center
  display: block
  padding-top: 0.5em

.teachers__entry-thumb-wrap
  height: 0
  padding-top: 100%
  position: relative
  overflow: hidden
  border-radius: 8px
  border: 3px solid transparent

.teachers__entry-thumb
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-size: cover
  background-position: center
  background-repeat: no-repeat

.teacher__cover
  width: 300px
  max-width: 100%
  margin: 0 auto
  padding: gutter-width 0
  img
    display: block
    width: 100%
    height: auto

.teacher__title
  font-weight: 300
  margin: 0
