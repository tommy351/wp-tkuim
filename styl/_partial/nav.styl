#main-nav
  background: color-nav-background
  width: nav-width
  padding: 75px 0 0
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25)
  border-radius: 0 0 3px 3px
  position: fixed
  top: 0
  ul
    padding: 50px 0 20px
    list-style: none
  li
    ul
      display: none
  a
    text-align: center
    text-decoration: none
    color: #fff
    display: block
    padding: 10px 0
    transition: 0.2s
    &:hover
      background: darken(color-nav-background, 10%)

#logo-wrap
  margin: 0 auto
  width: logo-size

#logo
  width: logo-size
  height: logo-size
  display: block
  background: #fff

