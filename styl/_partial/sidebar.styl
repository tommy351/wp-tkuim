.sidebar
  float: right
  width: sidebar-width
  margin-right: sidebar-width * -1
  padding: 0 gutter-width

.sidebar__widget
  padding: 30px 0 15px
  line-height: line-height
  ul
    margin: 0
    padding: 0
    list-style: none
  a
    text-decoration: none
    color: inherit
    &:hover
      color: color-accent
      text-decoration: underline

.sidebar__widget-title
  font-weight: 300
  margin: 0 0 15px
  padding-bottom: 10px
  line-height: 1.1
  border-bottom: 1px solid color-border