.header__menu
  float: left
  width: header-menu-width
  margin-left: header-menu-width * -1

.header__logo-wrap
  padding: 35px 0
  margin: 0
  font-size: 1em
  font-weight: normal

.header__logo
  display: block
  background: url(images/logo.png) no-repeat center top
  background-size: logo-size
  text-align: center
  padding-top: logo-size + 20px
  color: #fff
  text-decoration: none
  line-height: 1

.header__nav
  ul
    list-style: none
    margin: 0
    padding: 0
  li
    position: relative
    &:hover
      background: lighten(color-background, 20%)
      > .sub-menu
        display: block
  a
    text-decoration: none
    color: #fff
    display: block
    padding: 16px 24px
    line-height: 1
    font-size: 1.15em
  .sub-menu
    display: none
    position: absolute
    left: 100%
    top: 0
    background: color-background
    white-space: nowrap
    box-shadow: 0 0 12px rgba(#000, 0.3)

.header__top-menu
  clearfix()
  background: color-background
  font-size: 0.9em
  line-height: 1
  ul
    margin: 0
    padding: 0
    list-style: none
    float: right
  li
    float: left
  a
    color: #ddd
    text-decoration: none
    padding: 10px 15px
    display: block
    &:hover
      color: color-accent