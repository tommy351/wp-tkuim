.footer
  clear: both
  padding: 30px 0

.footer__contact
  clearfix()
  padding: 0 gutter-width
  font-size: 1.35em
  color: #eee

.footer__contact-link
  float: left
  padding-right: 25px
  &:last-of-type
    padding-right: 0

.footer__copyright
  clearfix()
  padding: 1em gutter-width 0
  font-size: 0.9em
  color: #bbb
  .menu
    list-style: none
    margin: 0
    padding: 0
    float: left
  li
    float: left
    &:before
      content: " / "
      opacity: 0.6
      padding: 0 0.5em
  a
    color: inherit
    text-decoration: none
    &:hover
      color: color-accent

.footer__copyright-text
  float: left

.footer__admin-link
  float: right