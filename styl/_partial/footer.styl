.footer
  clear: both
  padding: 30px 0

.footer__contact
  clearfix()
  padding: 0 gutter-width
  color: #eee
  line-height: line-height
  @media mq-desktop
    font-size: 1.35em

.footer__contact-link
  @media mq-desktop
    padding-right: 25px
    float: left

.footer__copyright
  clearfix()
  padding: 1em gutter-width 0
  font-size: 0.9em
  color: #bbb
  line-height: line-height
  .menu
    list-style: none
    margin: 0
    padding: 0
  li
    @media mq-desktop
      float: left
      &:before
        content: " / "
        opacity: 0.6
        padding: 0 0.5em
  a
    color: inherit
    text-decoration: none
    &:hover
      color: color-accent

.footer__copyright-text
  @media mq-desktop
    float: left

.footer__admin-link
  float: right