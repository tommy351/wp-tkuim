#footer-wrap
  @extend $wrapper
  background: color-footer-background

#footer
  @extend $inner
  color: #eee

#footer-copyright
  font-size: 0.9em
  padding: 20px 0

#footer-sidebar
  clearfix()
  margin: 0 gutter-width * -1

.footer-widget
  float: left
  width: 25%
  padding: 30px gutter-width
  font-size: 0.9em

.footer-widget-title
  color: #fff
  font-weight: bold
  padding-bottom: 1em

.footer-widget-item
  line-height: line-height

.footer-widget-link
  color: #ccc
  text-decoration: none
  &:hover
    color: #fff
